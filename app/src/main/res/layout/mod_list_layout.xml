<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 android:layout_height="wrap_content"
	 android:layout_width="match_parent"
	 android:padding="8dp">

	<com.google.android.material.imageview.ShapeableImageView
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:maxHeight="48dp"
		 app:shapeAppearance="@style/View.ImagePreviewCorner"
		 android:minHeight="24dp"
		 android:maxWidth="48dp"
		 android:minWidth="24dp"
		 android:id="@+id/mod_list_layout_preview" />

	<com.google.android.material.textview.MaterialTextView
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:layout_toEndOf="@id/mod_list_layout_preview"
		 android:maxWidth="24dp"
		 android:layout_marginStart="8dp"
		 android:maxLines="1"
		 android:id="@+id/mod_list_layout_name"
		 android:text="Mod Name" />

	<com.google.android.material.textview.MaterialTextView
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:layout_toEndOf="@id/mod_list_layout_preview"
		 android:layout_below="@id/mod_list_layout_name"
		 android:maxWidth="24dp"
		 android:layout_marginTop="2dp"
		 android:layout_marginStart="8dp"
		 android:maxLines="1"
		 android:id="@+id/mod_list_layout_description"
		 android:text="Mod Description" />

	<com.google.android.material.textview.MaterialTextView
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:layout_alignParentEnd="true"
		 android:maxWidth="24dp"
		 android:maxLines="1"
		 android:id="@+id/mod_list_layout_version"
		 android:text="v0.0.0" />

	<com.google.android.material.textview.MaterialTextView
		 android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:layout_below="@+id/mod_list_layout_version"
		 android:layout_alignParentEnd="true"
		 android:maxWidth="24dp"
		 android:maxLines="1"
		 android:id="@+id/mod_list_layout_author"
		 android:text="ThatMG393" />

</RelativeLayout>